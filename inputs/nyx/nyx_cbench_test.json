{
    "project-home" : "",
    "foresight-home" : "",

    "input": 
    {
        "filetype": "NYX",
        "filename": "../testing/data/z255_32.h5",


        "group" : "native_fields",
        "scalars": [ "baryon_density", "dark_matter_density", "temperature", "velocity_x", "velocity_y", "velocity_z" ],

        "uncompressed": 
        [
            {
                "group": "domain",
                "attributes": [
                    {
                        "name": "shape",
                        "type": "int",
                        "size": 3
                    },
                    {
                        "name": "size",
                        "type": "double",
                        "size": 3
                    }
                ]
            },

            {
                "group": "universe",
                "attributes": 
                [
                    {
                        "name": "hubble",
                        "type": "double",
                        "size": 1 
                    },

                    {
                        "name": "omega_b",
                        "type": "double",
                        "size": 1
                    },

                    {
                        "name": "omega_l",
                        "type": "double",
                        "size": 1
                    },

                    {
                        "name": "omega_m",
                        "type": "double",
                        "size": 1
                    },

                    {
                        "name": "redshift",
                        "type": "double",
                        "size": 1
                    }
                ]
            }
        ]
    },

    "compressor-comment" : "which compressors to test",
    "compressors" : 
    [
        {
            "name": "BLOSC",
            "output-prefix" : "BLOSC_"
        },

        {
            "name": "fpzip",
            "bits" : 26,
            "output-prefix" : "fpzip_26_"
        },

        {
            "name": "SZ",
            "output-prefix" : "sz_abs_.01_",
            "abs" : 1E-2
        },

        {
            "name": "zfp",
            "output-prefix" : "zfp_abs_.01_",
            "abs" : 1E-2
        }
    ],

    
    "cbench": 
    {
        "path" : "",

        "output" :
        {
            "run-path" : "build/",

            "output-decompressed": true,
            "output-decompressed-location" : "decompressed_files",
            
            "log-file" : "runlog_nyx_test_",
            "metrics-file" : "metrics_nyx_test_"
        },

        "metrics": 
        [
            {
                "name" : "absolute_error",
                "histogram" : ["baryon_density", "temperature", "velocity_x"]
            },

            {
                "name" : "relative_error"
            },

            {
                "name" : "mse"
            },

      {
        "name": "psnr"
      },

            {
                "name" : "minmax",
                "histogram" : ["baryon_density", "temperature", "velocity_x"]
            }
        ]
    }
}
